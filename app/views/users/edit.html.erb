<div class="container">
  <div class="col col-lg-6 col-md-10 m-md-auto m-lg-0 ">
    <% if @user.errors.any? %>
      <h5 class="text-danger"><%= @user.errors.count %>errors prohibited this obj from being saved:</h5>
        <ul class="list_style_error pl-4 mt-2">
          <% @user.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
        </ul>
    <% end %>
    <div class="my-4">
      <h1 class="my-4">プロフィールを編集</h1>
      <%= form_with model: @user do |f| %>
        <div class="field my-2 w-100">
          <%= f.label :Name ,class:"f_label_font" %><br />
          <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前" ,class:"form-control" %>
        </div>
        <div class="field my-2 w-100">
          <%= f.label :Introduction ,class:"f_label_font" %><br />
          <%= f.text_area :introduction, id:"user_introduction", placeholder:"自己紹介" ,class:"form-control" , rows: 5%>
        </div>

        <div class="field my-2 w-100">
          <%= f.label :Image ,class:"f_label_font" %><br />
          <%= f.file_field :profile_image, id:"user_profile_image", placeholder: "プロフィール画像", accept: "image/*" , class:"form-control-file" %>
        </div>
        <div class="my-2">
          <p class="py-2">現在の画像</p>
          <%= image_tag @user.get_profile_image(150, 150) ,class: "img-fluid rounded-circle", style: "width: 80px; height: 80px; object-fit: cover;"%>
        </div>
        <div class="d-flex justify-content-between py-4">
          <%= f.submit "更新する",class:"btn update_user_btn" %>
          <%= link_to user_path(current_user.id), method: :delete, data: { confirm: "本当に退会しますか？" }, class:"btn btn-outline-secondary user_btn" do %>
            <i class="fa-solid fa-user-xmark fa-sm"></i><span> 退会する</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>