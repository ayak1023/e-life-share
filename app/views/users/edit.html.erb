<div class="container">
  <div class="col-6">
    <% if @user.errors.any? %>
      <h5 class="text-danger"><%= @user.errors.count %>errors prohibited this obj from being saved:</h5>
        <ul class="list_style_error pl-4 mt-2">
          <% @user.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
        </ul>
    <% end %>
    <div class="mt-4">
      <h2>プロフィールを編集</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group mt-4">
          <label for="userName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前" ,class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="userIntroduction">Introduction</label>
          <%= f.text_area :introduction, id:"user_introduction", placeholder:"自己紹介" ,class:"form-control" %>
        </div>
        <div class="form-group mb-4">
          <label for="userImage">Image</label>
          <%= f.file_field :profile_image, id:"user_profile_image", placeholder: "プロフィール画像", accept: "image/*" , class:"form-control-file" %>
        </div>
        <div class="d-flex justify-content-between pt-2">
          <%= f.submit "更新する",class:"btn update_user_btn" %>
          <%= link_to user_path(current_user.id), method: :delete, data: { confirm: "本当に退会しますか？" }, class:"btn btn-outline-secondary user_btn" do %>
            <i class="fa-solid fa-user-xmark fa-sm"></i><span> 退会する</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>