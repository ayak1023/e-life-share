<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>プロフィールを編集</h2>
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <div class="form-group mt-4">
          <label for="userName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前" ,class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="userIntroduction">Introduction</label>
          <%= f.text_area :introduction, id:"user_introduction", placeholder:"自己紹介" ,class:"form-control" %>
        </div>
        <div class="form-group mb-4">
          <label for="userImage">Image</label>
          <%= f.file_field :profile_image, id:"user_profile_image", placeholder: "プロフィール画像", accept: "image/*" , class:"form-control-file" %>
        </div>
        <%= f.submit "Update User",class:"btn update_user_btn" %>
      <% end %>
    </div>
  </div>
</div>