<div class="container">
  <h5>検索結果</h5>

  <table class="table table-hover table-inverse">
    <% if @range == "User" %>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      </tbody>
    <% elsif @range == "Post" %>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
</div>