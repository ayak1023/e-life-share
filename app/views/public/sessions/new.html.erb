<div class="container">
  <div class="row-cols-lg-3 row-cols-md-2">
    <h1 class="my-4">Log in</h1>
    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="field my-2 w-100">
        <%= f.label :email ,class:"f_label_font" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"w-100"%>
      </div>

      <div class="field my-2 w-100">
        <%= f.label :password ,class:"f_label_font" %><br />
        <%= f.password_field :password, autocomplete: "current-password" ,class:"w-100"%>
      </div>

      <div class="actions mt-4 mb-2 w-100">
        <%= f.submit "ログインする" ,class:"btn btn_bg_b btn-block  fs_1_2"%>
      </div>
    <% end %>
    <div class="my-2">
      <%= link_to "サインアップする", new_registration_path(resource_name) %>
    </div>

    <div class="my-5">
        <%= link_to "ゲストログイン(閲覧用)", users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block sign_in text-center", method: :post %>
    </div>
  </div>
</div>