<% if post.present? && post.comments.present? %>
  <% post.comments.each do |comment| %>
    <div class="py-2 border-bottom" id="comment_<%= comment.id %>">
      <div class="d-flex flex-row align-items-center justify-content-between ">
        <div>
          <%= link_to user_path(comment.user) do %>
            <%= image_tag comment.user.get_profile_image(40,40) ,style: "width: 40px; height: 40px; object-fit: cover;"%>
            <span class="ml-1"><%= comment.user.name %></span>
          <% end %>
        </div>
        <div>
          <% if comment.user == current_user %>
            <div class="comment">
              <%= link_to post_comment_path(comment.post, comment), method: :delete, remote: true do %>
                <i class="fa-regular fa-trash-can fa-lg"></i>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="p-2"><%= comment.body %></div>
      <div class="text-right">
        <p class="fs_08"><%= comment.created_at.strftime('%Y/%m/%d') %></p>
      </div>
    </div>
  <% end %>
<% end %>