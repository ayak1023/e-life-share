<div class="my-2">
  <div class="d-flex flex-row align-items-center justify-content-between">
    <div class="d-flex flex-row">
      <% if user_signed_in? %>
      <div class="post-<%= post.id %>-favorite">
        <% if post.favorited_by?(current_user) %>
          <p>
            <%= link_to post_favorite_path(post), method: :delete, remote: true do %>
              <i class="fa-solid fa-heart fa-xl"></i>
              <span class="ml-1"><%= post.favorites.count %></span>
            <% end %>
          </p>
        <% else %>
          <p>
            <%= link_to post_favorite_path(post), method: :post, remote: true do %>
              <i class="fa-regular fa-heart fa-xl"></i>
              <span class="ml-1"><%= post.favorites.count %></span>
            <% end %>
          </p>
        <% end %>
      </div>
      <% else %>
        <div>
          <i class="fa-regular fa-heart fa-xl"></i>
          <span class="ml-1"><%= post.favorites.count %></span>
        </div>
      <% end %>

    <%= render 'public/posts/posts_comment_counter', post: post %>

    </div>
    <div class="text-right">
      <p class="fs_08"><%= post.created_at.strftime('%Y/%m/%d') %></p>
    </div>
  </div>
</div>
