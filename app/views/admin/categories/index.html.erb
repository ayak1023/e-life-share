<h1>Categories</h1>
<%= form_with(model: @new_category, url: admin_categories_path, method: :post, local: true) do |form| %>
  <% if @new_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@new_category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
        <% @new_category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :name, 'New Category Name' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Create Category', class: 'btn btn-primary' %>
  </div>
<% end %>

<h2>Existing Categories</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-warning' %>
          <%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>