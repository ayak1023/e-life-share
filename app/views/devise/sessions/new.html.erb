<div class="container">
  <div class="row-cols-lg-3 row-cols-md-2">
    <div class="my-2">
      <h2 class="mb-4">Log in</h2>
      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="field mb-2 w-100">
          <%= f.label :email ,class:"w-100"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"w-100"%>
        </div>

        <div class="field mb-2 w-100">
          <%= f.label :password ,class:"w-100"%><br />
          <%= f.password_field :password, autocomplete: "current-password" ,class:"w-100"%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-2 w-100">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions w-100">
          <%= f.submit "Log in" ,class:"btn btn_bg_b btn-block"%>
        </div>
      <% end %>
      <div class="mt-2">
        <%= link_to "Sign up", new_registration_path(resource_name) %>
      </div>

      <div class="mt-5">
          <%= link_to "ゲストログイン(閲覧用)", users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block sign_in text-center", method: :post %>
      </div>

    </div>
  </div>
</div>