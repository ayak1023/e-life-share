<div class="container">
  <div class="col-4">
    <div class="my-2">
      <h2 class="mb-4">Log in</h2>
      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="field mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"w-100"%>
        </div>

        <div class="field mb-2">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password" ,class:"w-100"%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" ,class:"btn btn_bg_b w-100"%>
        </div>
      <% end %>
      <div class="mt-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>