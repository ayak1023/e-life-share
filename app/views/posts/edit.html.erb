<h1>投稿を編集</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <h4>現在の画像</h4>
  <h5>現在の画像</h5>
  <% if @post.image.attached? %>
    <%= image_tag @post.image, style: "width: 300px; height: auto;" %><!--画像を小さくかつ、切り抜いて表示させる-->

    <%= f.check_box :remove_image %>
    <%= f.label :remove_image, "現在の画像を削除する" %>
  <% else %>
    <p>No Image</p>
  <% end %>

  <h5>新しい画像を選択</h5>
  <%= f.file_field :image %>

  <%= f.submit '保存' %>

<% end %>