<h2>Title</h2>
<p><%= @post.title %></p>

<h2>body</h2>
<p><%= @post.body %></p>

<h2>image</h2>
<% if @post.image.attached? %>
  <%= image_tag @post.image, style: "width: 300px; height: auto;" %>
<% else %>
<% end %>

<%= link_to "Edit", edit_post_path(@post.id) %>
<span>│</span>
<%= link_to "削除", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
