<div class="container">
  <% if @post.errors.any? %>
    <h5 class="text-danger"><%= @post.errors.count %>件のエラーが発生しました</h5>
    <ul class="list_style_error pl-4 mt-2">
      <% @post.errors.full_messages.each do |message| %>
        <li class="text-danger"><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <h1 class="my-4">New Post</h1>
  <div class="row m-auto">

    <div class="my-2">
      <%= form_with model: Post.new do |f| %>

        <div class="field my-2 w-100">
          <%= f.label :Title ,class:"f_label_font" %><br />
          <%= f.text_field :title ,class:"w-100"%>
        </div>

        <div class="field my-2 w-100">
          <%= f.label :Body ,class:"f_label_font" %><br />
          <%= f.text_area :body ,class:"w-100"%>
        </div>

        <div class="field">
          <%= f.label :category_ids, 'Categories' %>
          <%= f.collection_select :category_ids, Category.all, :id, :name, { include_blank: "選択して下さい" }, { multiple: true, class: 'form-control' } %>
        </div>

        <div class="field my-2 w-100">
          <%= f.label :Image ,class:"f_label_font" %><br />
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="py-4">
          <%= f.submit '投稿する' ,class:"btn btn_bg_b btn-block"%>
        </div>
      <% end %>
    </div>
  </div>
</div>