<h1>投稿一覧</h1>

<% @posts.each do |post| %>

  <%= link_to post_path(post.id) do %>
    <div>
      <% if post.image.attached? %>
        <%= image_tag post.image, style: "width: 200px; height: auto;" %><!--画像を小さくかつ、切り抜いて表示させる-->
      <% else %>
      <% end %>
    </div>
    <div>
      <%= post.title %>
    </div>
    <div>
      <%= post.body %>
    </div>
  <% end %>


<% end %>