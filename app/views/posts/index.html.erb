<div class="container">
  <div class="row justify-content-around">
    <!-- ユーザーの詳細 -->
    <%= render 'users/side', user: current_user %>
    <!-- ユーザーの投稿一覧 -->
    <div class="d-flex flex-column col-lg-6">
      <% if @posts.present? %>
        <% @posts.each do |post| %>
          <% user = post.user %>
          <div class="d-flex flex-column p-2 border-bottom w-100">
            <%= render 'users/post_account', user: user %>
            <%= render 'posts/posts_content', post: post %>
            <%= render 'posts/posts_content_bottom', post: post %>
          </div>
        <% end %>
      <% else %>
        <p class="pt-4">まだ、投稿がありません。投稿してみましょう！</p>
      <% end %>
    </div>
  </div>
</div>