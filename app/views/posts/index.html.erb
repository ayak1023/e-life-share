<div class="container">
  <div class="row justify-content-around">
    <%= render 'users/side', user: current_user %>
    <div class="col col-lg-7 col-md-7">
      <div class="d-flex align-items-center justify-content-between mt-5 border-bottom">
        <h1 class="d-none d-sm-block fs_1_6 mb-3">フォロー中 投稿一覧</h1>
        <h1 class="d-sm-none fs_1_2 mb-3">フォロー中 投稿一覧</h1>
        <%= render 'posts/posts_sort', url: posts_path %>
      </div>
      <div class="d-flex flex-column">
        <% if @posts.present? %>
          <% @posts.each do |post| %>
            <% user = post.user %>
            <div class="d-flex flex-column py-1 px-2 py-lg-3 px-lg-5 border-bottom w-100">
              <%= render 'users/post_account', user: user %>
              <%= render 'posts/posts_content', post: post %>
              <%= render 'posts/posts_content_bottom', post: post %>
            </div>
          <% end %>
        <% else %>
          <p class="pt-4">まだ、フォローしていません。フォローして投稿を確認してみましょう！</p>
        <% end %>
      </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>