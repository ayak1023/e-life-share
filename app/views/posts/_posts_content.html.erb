<div class="my-2">
  <div>
    <%= link_to post_path(post.id), class: 'text-decoration-none text-dark' do %>
    <h3 class=""><%= post.title %></h3>
    <div class="my-2">
      <%= post.body %>
    </div>
    <% end %>

    <p class="category-list my-3">
      <%= post.categories.map do |category| %>
        <%= link_to category.name, category_posts_path(category.id), class: 'category-item' %>
      <% end.join(' ').html_safe %>
    </p>

    <%= link_to post_path(post.id), class: 'text-decoration-none text-dark' do %>
    <%= image_tag(post.image.variant(resize_to_fill: [800, 450]).processed, class: "rounded img-fluid") if post.image.attached? %>
    <% end %>
  </div>
</div>